<div fxLayout="row" fxLayout.xs="column" [fxLayoutAlign]="align" class="text-muted">
    <div *ngIf="product?.availibilityCount > 0 && (type=='all' || type=='wish')">
        <span *ngIf="type!='wish'" class="fw-500">Quantity:</span>
<span class="cdk-visually-hidden" #translatedTooltipMessage >Remove</span>
        <button mat-icon-button [matTooltip]="translatedTooltipMessage.innerHTML" (click)="decrement()"><mat-icon>remove</mat-icon></button>
        <span> {{count}} </span>
<span class="cdk-visually-hidden" #translatedTooltipMessage1 >Add</span>
        <button mat-icon-button [matTooltip]="translatedTooltipMessage1.innerHTML" (click)="increment()"><mat-icon>add</mat-icon></button>
    </div>
    <div *ngIf="type!='wish'">
<span class="cdk-visually-hidden" #translatedTooltipMessage2 >Add to wishlist</span>
<span class="cdk-visually-hidden" #translatedTooltipMessage3 >Add to cart</span>
<span class="cdk-visually-hidden" #translatedTooltipMessage4 >Add to compare</span>
<span class="cdk-visually-hidden" #translatedTooltipMessage5 >Quick view</span>

        <button mat-icon-button [matTooltip]="translatedTooltipMessage2.innerHTML" (click)="addToWishList(product)"><mat-icon>favorite</mat-icon></button>
        <button mat-icon-button [matTooltip]="translatedTooltipMessage3.innerHTML" *ngIf="product?.availibilityCount > 0" (click)="addToCart(product)"><mat-icon>shopping_cart</mat-icon></button>
        <button mat-icon-button [matTooltip]="translatedTooltipMessage4.innerHTML" (click)="addToCompare(product)"><mat-icon>compare</mat-icon></button>
        <button *ngIf="type!='all'" mat-icon-button matTooltip="Snel bekijken" (click)="openProductDialog(product)"><mat-icon>remove_red_eye</mat-icon></button>
    </div>
</div>
